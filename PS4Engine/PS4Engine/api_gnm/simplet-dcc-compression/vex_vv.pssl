#include "../toolkit/shader_common/shader_base.h"

float4 main(uint id : S_VERTEX_ID) : S_POSITION
{
	float x;
	float y;

	if ( id == 0 )
	{
		x = -0.5;
		y = -0.4;
	}
	else if ( id == 1 )
	{
		x = 0;
		y = 0.6;
	}
	else
	{
		x =  0.5;
		y = -0.4;
	}

	return float4(x,y,0,1);
}
